{
  "private": true,
  "name": "verisart",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:tailwind": "tailwindcss --config ./tailwind.config.js --output ./app/styles/tailwind.css --minify",
    "build:remix": "remix build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:tailwind": "tailwindcss --config ./tailwind.config.js --output ./app/styles/tailwind.css --watch",
    "dev:remix": "remix dev",
    "postinstall": "remix setup node && prisma migrate reset --force",
    "start": "remix-serve build"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "@remix-run/react": "^0.20.1",
    "@remix-run/serve": "^0.20.1",
    "daisyui": "^1.16.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6.0.0-beta.8",
    "remix": "^0.20.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.20.1",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-prisma": "^3.4.1",
    "prettier-plugin-tailwind": "^2.2.12",
    "prisma": "^3.4.2",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
